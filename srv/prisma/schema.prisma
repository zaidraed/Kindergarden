// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  PARENT
  TEACHER
  ADMIN
}

model Users {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  password String
  email    String   @unique
  Role     Role     @default(PARENT)
  Active   Boolean  @default(true)
}

model Photo {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  url         String
  classroomId String
  description String
}

model Video {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  url         String
  classroomId String
  description String
  publicId    String   // Nuevo campo para almacenar el public_id de Cloudinary
  createdAt   DateTime @default(now())
}